---
import { Producto } from "./productos.ts";

---


<section class="font-Amatic mb-4" >
  <h1 class="font-Protest text-3xl pl-3 py-4  lg:py-2 text-center lg:text-start uppercase">Nuestros Productos</h1>
  <div id="art" class="grid lg:grid-cols-6 grid-cols-2 gap-5 lg:max-w-7xl mx-auto ">
    {
      Producto.slice(0, 6).map(({ id,nombre, img, marca, precio }) => (
        <article id="articulo" class=" hidden bg-white rounded-lg p-3 overflow-hidden  w-full flex flex-col justify-evenly">
          <img class="" src={img} alt="" />
          <div class="lg:py-3 lg:px-2 overflow-hidden">
            <p class="text-[#767676] lg:tracking-wider lg:text-[11px] text-[8px] uppercase">
              {marca}
            </p>
            <h4 class="lg:text-base   text-[12px] font-extralight ">{nombre}</h4>
            <h3 class="text-sm lg:text-lg font-semibold text-[#717171]">S/ {precio}</h3>
          </div>
            <button class="mt-4 py-1  lg:py-0 w-full border-[1px] lg:h-10 border-black font-Protest hover:bg-red-600 hover:text-white transition hover:border-none">
              <a class="lg:text-base text-sm" href={`productoDetalle?id=${id}`}>Comprar</a>

            </button>
          
        </article>
      ))
    }
  </div>
</section>

<style>
  #articulo:hover img{
    transform: scale(1.05);
    transition: all 0.5s ease-in-out; 

  }
  #articulo:hover button{
    background-color: #f00;
    color: #fff;
    border: none;
    transition: all 0.5s ease-in-out; 
  }
  #articulo:hover p{
    color: #f00;
  }

  
</style>
<script>
  const Articulos = document.querySelectorAll('#articulo');
  const delay = 360; 
  
  window.addEventListener('scroll', () => {
    if (Articulos.length > 0) {
      Articulos.forEach((Articulo, index) => {
        const delayForArticle = index * delay;
        setTimeout(() => {
          if (window.scrollY >= 345) { 
            Articulo.classList.add('lg:animate-fade-in-up');
            Articulo.classList.remove('hidden');
          } 
        }, delayForArticle);
      });
    }
  });
</script>

